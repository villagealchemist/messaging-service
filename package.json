{
  "name": "messaging-service",
  "version": "1.0.0",
  "description": "Unified messaging API service for SMS/MMS and Email",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsoa spec-and-routes && nodemon",
    "build": "tsoa spec-and-routes && tsc",

    "start": "node dist/app.js",

    "migrate": "ts-node src/database/migrator.ts latest",
    "migrate:up": "ts-node src/database/migrator.ts up",
    "migrate:down": "ts-node src/database/migrator.ts down",
    "migrate:reset": "ts-node src/database/migrator.ts reset",

    "db:codegen": "kysely-codegen --out-file src/database/generated-types.ts",

    "db:seed": "ts-node src/database/seed.ts",

    "db:reset": "npm run migrate:reset && npm run migrate && npm run db:codegen && npm run db:seed",

    "test": "jest --coverage",
    "test:watch": "jest --watch",

    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  }
,
  "dependencies": {
    "@types/morgan": "^1.9.10",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "kysely": "^0.27.0",
    "libphonenumber-js": "^1.10.51",
    "morgan": "^1.10.1",
    "pg": "^8.11.3",
    "tsoa": "^5.1.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "kysely-codegen": "^0.11.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "kysely-codegen": {
    "camelCase": true
  }
}
